<Window x:Class="Views.GlobalSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        mc:Ignorable="d"
        Title="Global search" Height="700" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="321*"></ColumnDefinition>
            <ColumnDefinition Width="175*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="workersDataGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="300" Width="622"/>
        <DataGrid x:Name="positionsDataGrid" HorizontalAlignment="Left" Margin="10,315,0,0" VerticalAlignment="Top" Height="344" Width="622"/>
        <DataGrid x:Name="departmentsDataGrid" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="300" Width="330"/>
        <DataGrid x:Name="projectsDataGrid" Grid.Column="1" HorizontalAlignment="Left" Margin="10,315,0,0" VerticalAlignment="Top" Height="300" Width="330"/>
        <Button Name="OK" Content="OK" Grid.Column="1" FontSize="15" Height="30" Width="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Click="OK_Click"/>
    </Grid>
</Window>
