<Window x:Class="Views.AddDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        mc:Ignorable="d"
        Title="Add department" Height="300" Width="300">
    <Grid RenderTransformOrigin="0.5,0.365" KeyDown="Grid_KeyDown">
        <Button x:Name="OK" Content="OK" FontSize="15" Height="30" Width="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" Click="OK_Click"/>
        <Button x:Name="Cancel" Content="Cancel" FontSize="15" Height="30" Width="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,212,20" Click="Cancel_Click"/>
        <Label x:Name="label" Content="Name" FontSize="15" HorizontalAlignment="Left" Margin="30,120,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="30" FontSize="15" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="119,120,0,0"/>
    </Grid>
</Window>
