<Window x:Class="Views.AddProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        mc:Ignorable="d"
        Title="AddProject" Height="300" Width="300">
    <Grid KeyDown="Grid_KeyDown">
        <Label Content="Name" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40 50"/>
        <TextBox Name="nameTextBox" FontSize="15" Height="30" Width="120" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="129,50,0,0"/>
        <Label Content="Cost" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,121,0,0"/>
        <TextBox Name="costTextBox" FontSize="15" Height="30" Width="120" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="129,120,0,0"/>
        <Button Name="OK" Content="OK" FontSize="15" Height="30" Width="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" Click="OK_Click"/>
        <Button Name="Cancel" Content="Cancel" FontSize="15" Height="30" Width="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,212,20" Click="Cancel_Click"/>
    </Grid>
</Window>
